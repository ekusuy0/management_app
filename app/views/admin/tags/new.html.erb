<div class="container text-center">
  <h1>管理者用ページ</h1>

  <%= form_with model: @tag, url: admin_tags_path, method: :post do |f| %>
    <%= f.text_field :name %><br>
    <%= f.submit 'タグ作成' %>
  <% end %>


  <% if @tags.present? %>
    <div class="tag-box">
      <% @tags.each do |tag| %>
        <%= tag.name %><%= link_to '削除', admin_tag_path(tag.id), method: :delete %>
      <% end %>
    </div>
  <% end %>

</div>