<h1>トップページ</h1>

<% if user_signed_in? %>
  <h1 class="text-danger"><%= @user.name %></h1>
<% end %>

<h1>努力SHOW!</h1>

<div class="container text-center">
  <div id="time">00:00:00.000</div>

  <input id="start" type="button" value="開始"></input>
  <input id="break" type="button" value="休憩"></input>
  <input id="stop" type="button" value="終了"></input>

</div>

<%= javascript_pack_tag 'script' %>
